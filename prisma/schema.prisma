generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

/// User roles in the system
enum Role {
  RECEPTIONIST
  DOCTOR
  LABORATORIST
  ADMIN
}

/// Status of an appointment
enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
  MISSED
}

/// Stage of patient visit
enum VisitStatus {
  REGISTERED
  VITALS_TAKEN
  ASSIGNED_TO_DOCTOR
  EXAMINED
  LAB_ORDERED
  PAID_FOR_LAB
  ASSIGNED_TO_LAB
  LAB_COMPLETED
  FINALIZED
}

/// Type of service: vital check or lab test
enum ServiceType {
  VITAL
  LAB_TEST
}

/// Status of a lab order
enum LabOrderStatus {
  ORDERED
  PAID
  ASSIGNED
  COMPLETED
}

/// Types of notifications
enum NotificationType {
  ASSIGNMENT
  REMINDER
  UPDATE
}

/// Users: doctors, receptionists, laboratorists, admin
model User {
  id               String           @id @default(auto()) @map("_id") @db.ObjectId
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  name             String
  email            String           @unique
  emailVerified    DateTime?
  password         String
  role             Role
  notifications    Json?            // [{ id, type, message, read, createdAt }]
  assignedPatients Patient[]        @relation("DoctorPatients")
  appointments     Appointment[]    @relation("DoctorAppointments")
  labOrders        LabOrder[]       @relation("OrderedByUser")
  assignedLabOrders LabOrder[]      @relation("AssignedToLaboratorist")
  accounts         Account[]
  sessions         Session[]

  @@index([role])
  @@map("users")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId]) // Enforce in app logic if needed
  @@map("accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String   @id @default(auto()) @map("_id") @db.ObjectId
  token      String   @unique
  expires    DateTime

  // Note: Composite unique constraint (identifier, token) not supported in Prisma for MongoDB.
  // Enforce uniqueness in application logic if needed.
  @@map("verificationtokens")
}

/// Patients with medical history and contact info
model Patient {
  id              String            @id @default(auto()) @map("_id") @db.ObjectId
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  name            String            @unique
  lastName        String?
  dob             DateTime?
  age             Int?
  gender          String?
  phone           String?
  address         String?
  history         String?           // [{ appointmentId, visitDetails, completedAt }]
  notifications   Json?             // [{ id, type, message, read, createdAt }]
  visitStatus     VisitStatus?      @default(REGISTERED)
  doctorId        String?           @map("doctor_id") @db.ObjectId
  doctor          User?             @relation("DoctorPatients", fields: [doctorId], references: [id])
  assignedAt      DateTime?       
  appointments    Appointment[]
  vitals          Json?             // { weight, bpSystolic, bpDiastolic, measuredById, measuredAt }
  examination     Json?             // [{ appointmentId, complaints, diagnosis, visitStatus, createdAt }]
  prescription    Json?             // [{ appointmentId, medicines, recommendations, createdAt }]
  attachments     Json?             // [{ id, fileUrl, fileName, uploadedById, uploadedAt }]
  labOrders       LabOrder[]

  @@index([doctorId])
  @@map("patients")
}

/// Services offered: e.g., "Blood Pressure", "CBC Test"
model Service {
  id              String            @id @default(auto()) @map("_id") @db.ObjectId
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  name            String
  description     String?
  type            ServiceType
  labOrders       LabOrder[]

  @@index([type])
  @@map("services")
}

/// Appointments track patient visits and clinical flow
model Appointment {
  id              String            @id @default(auto()) @map("_id") @db.ObjectId
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  patientId       String            @db.ObjectId
  doctorId        String?           @db.ObjectId
  dateTime        DateTime?
  status          AppointmentStatus @default(SCHEDULED)
  reminderSent    Boolean           @default(false)

  patient         Patient           @relation(fields: [patientId], references: [id])
  doctor          User?             @relation("DoctorAppointments", fields: [doctorId], references: [id])

  @@index([patientId])
  @@index([doctorId])
  @@index([dateTime])
  @@index([status])
  @@map("appointments")
}

/// Lab orders are now proper relational models (not JSON)
model LabOrder {
  id                String            @id @default(auto()) @map("_id") @db.ObjectId
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  patientId         String            @db.ObjectId
  serviceId         String            @db.ObjectId
  orderedById       String            @db.ObjectId
  laboratoristId    String?           @db.ObjectId
  status            LabOrderStatus    @default(ORDERED)
  result            String?
  paidAt            DateTime?
  completedAt       DateTime?
  orderedAt         DateTime          @default(now())
  patient           Patient           @relation(fields: [patientId], references: [id])
  service           Service           @relation(fields: [serviceId], references: [id])
  orderedBy         User              @relation("OrderedByUser", fields: [orderedById], references: [id])
  laboratorist      User?             @relation("AssignedToLaboratorist", fields: [laboratoristId], references: [id])

  @@index([status])
  @@index([laboratoristId])
  @@index([patientId])
  @@index([serviceId])
  @@map("laborders")
}